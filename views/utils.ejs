<script>
  const enlarge = function (a) {
    const element = document.getElementById(a)
    element.requestFullscreen()
  }
  const makeFormVisable = function () {

    const passwordEntered = document.getElementById('isAdmin')
    if (passwordEntered.value === "DIM") {
      const formDiv = document.getElementById('uploadForm')
      formDiv.classList.remove('d-none')
      const passwordDiv = document.getElementById('passwordDiv')
      passwordDiv.classList.add('d-none')
    } else {
      passwordEntered.value = "Invalid password"
    }

  }
  const checkMP4 = function () {
    const fileName = document.getElementById("fileName")
    const suffix = fileName.value.slice(-3)
    if (suffix !== 'mp4') {
      const errorLabel = document.getElementById("errorLabel")
      errorLabel.innerText = "Only MP4 files allowed"
      return false
    }
  }


</script>