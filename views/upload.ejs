<%- include('header') %>
  <!-- -------------------------------------------------------------- -->

  <body>

    <h1>File upload project</h1>
    <form action="/upload" method='POST' enctype='multipart/form-data'>
      <input type="file" name="file">
      <input type="submit" value="Submitt">
    </form>
    <section class="container">
      <div class="row">
        <!--  fileList passed in via EJS object-->
        <!--  res.render("upload", { fileList: fileList });-->
        <% fileList.forEach((file)=>{%>
          <div class="col-lg-6">
            <video id='<%= file%>' controls width="400">
              <source src="/files/<%= file%>" type="video/mp4">
            </video>
            <button onclick="enlarge('<%= file%>')" class="btn btn-primary">Change to full screen</button>
          </div>
          <%}) %>
      </div>

    </section>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </body>

  </html>